<div class="row">
    <div class="col-sm-6 offset-sm-3 col-md-6 offset-md-3">
        <div class="head">
            Buy Now
        </div>
        <div class="price">
            <p>Total Price: ${{totalPrice}}</p>
        </div>
        <div class="checkout">
            <form action="/checkout" method="POST">
                <div class="form-group">
                    <label for="name">
                        Name
                    </label>
                    <input type="text" class="form-control" id="name">
                </div>
                 <div class="form-group">
                    <label for="email">
                        Email
                    </label>
                    <input type="email" class="form-control" id="email">
                </div>
                <div class="form-group">
                    <label for="address">
                        Address
                    </label>
                    <input type="text" class="form-control" id="address">
                </div>
                <div class="form-group">
                    <label for="card-name">
                        Card Name
                    </label>
                    <input type="text" class="form-control" id="card-name">
                </div>
                <div class="form-group">
                    <label for="card-no">
                        Card Number
                    </label>
                    <input type="text" class="form-control" id="card-no">
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="ex-month">
                                Expiry Month
                            </label>
                            <input type="text" class="form-control" id="ex-month">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="ex-year">
                                Expiry Year
                            </label>
                            <input type="text" class="form-control" id="ex-year">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="cvc">
                        CVC
                    </label>
                    <input type="text" class="form-control" id="cvc">
                </div>
                <div class="button">
                    <button class="btn btn-success">Check Out</button>
                </div>
            </form>
        </div>
    </div>
</div>